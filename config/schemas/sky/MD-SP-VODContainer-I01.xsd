	<!--                               -->
	<!-- ADI Container Type -->
	<!--                               -->
	<xsd:complexType name="ADIContainerType">
		<xsd:annotation>
			<xsd:documentation>
			An ADI container element for holding anything.
		</xsd:documentation>
